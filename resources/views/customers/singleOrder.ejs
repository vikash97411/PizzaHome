<section class="status mx-16">
    <div class="container mx-auto">
        <div class=" w-full md:w-2/3 status-box mx-auto">
            <div class="flex item-center justify-between mb-12">
                <h1 class="text-sm lg:text-xl font-bold">Track delivery status</h1>
                <h6 class="text-xs py-1 rounded-full bg-white text-green-600 px-4"><%= order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status_line text-sm lg:text-xl pb-16" data-status="order_placed" ><span>Order Placed</span></li>
                <li class="status_line text-sm lg:text-xl pb-16" data-status="confirmed"><span>Order Confirmation</span></li>
                <li class="status_line text-sm lg:text-xl pb-16" data-status="prepared"><span>Preparation</span></li>
                <li class="status_line text-sm lg:text-xl pb-16" data-status="delivered"><span>Out for delivery</span></li>
                <li class="status_line text-sm lg:text-xl " data-status="completed"><span>Complete</span></li>
            </ul>
        </div>
    </div>
</section>