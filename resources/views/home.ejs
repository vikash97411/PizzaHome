<section class="hero py-16 px-16">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2 my_pizza">
      <h6 class="text-lg"><em>Are you hungry?</em></h6>
      <h1 class="text-3xl md:text-6xl font-bold">Don't wait!</h1>
      <a type="button" href="#order_section" class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</a>
    </div>
    <div class="md:w-full w-1/2">
      <img src="/img/pizza03.png" />
    </div>
  </div>
</section>
<section id="order_section" class="menu container mx-auto py-8 px-16">
  <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
  <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-12 gap-y-16">
    <% pizzas.forEach(function(Pizza){ %>
    <div class="w-full md:w-64">
      <img class="h-40 mx-auto mb-4" src="<%=Pizza.image %> " alt="Pizza_img" />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%=Pizza.name %></h2>
        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%=Pizza.size %></span>
        <div class="flex items-center justify-around mt-6 ">
          <span class="font-bold">&#x20B9 <%=Pizza.price %></span>
          <button data-pizza="<%= JSON.stringify(Pizza) %>" class="w-24 add_to_cart py-1 px-6 rounded-full flex items-center font-bold">
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>
  <% } )%>
   
  </div>
</section>