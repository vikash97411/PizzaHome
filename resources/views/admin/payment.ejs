<section class="payment light-section px-16">
    <div class="container pt-5 mx-auto ">
        <div class="flex justify-center ">
      
           
        
            <div class="w-1/2 max-w-xs mx-auto bg-white shadow-md rounded">
                <h1 class="font-bold text-lg text-center mt-4 mb-4">Update Payment Status</h1>
                <form action="/admin/order/payment" method="post" class=" px-8 pt-6 pb-8 mb-4">
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="orderId">
                            Order Id
                        </label>
                        <input type="hidden" value="<%= (order._id).toString() %>" name="orders"/>
                        <input
                           value="<%= (order._id).toString() %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="orderId" type="text" placeholder="Order" disabled>
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="Customer">
                            Customer
                        </label>
                        <input
                          value="<%= order.customerId.name %>"  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700  leading-tight focus:outline-none focus:shadow-outline"
                           id="Customer" type="text" placeholder="customer" disabled>
                        
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="Phone">
                            Contact no
                        </label>
                        <input value="<%= order.phone %>"
                            class="shadow appearance-none border  rounded w-full py-2 px-3 text-gray-700  leading-tight focus:outline-none focus:shadow-outline"
                          id="Phone" type="text" placeholder="phone" disabled>
                    
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="Status">
                            Status
                        </label>
                      <div class="inline-block relative w-64">
                        <select id="Status" name="paymentStatus"
                            class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
                          
                            <option value="true" <%= order.paymentStatus ===true ? 'selected' : '' %> >Paid</option>
                            <option value="false" <%= order.paymentStatus === false ? 'selected' : '' %> >Unpaid</option>
                           </select>
                        
                    </div>
                    
                    </div>
                    <div class="flex items-center justify-between">
                        <button
                            class="bg-orange-500 btn-primary text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                            type="submit">
                            Update
                        </button>
                        
                    </div>
                </form>
                
            </div>
        </div>
       
    
    </div>
</section>